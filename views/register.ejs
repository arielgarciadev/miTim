
<div style="
padding: 1rem;
background-color: #f5f5f5;
padding: 1rem;
margin: auto;">
    <div style="text-align: center;">
        <img class="mb-4" src="../public/logo.png" alt="" width="72" height="72">
          <h1 class="h3 mb-3 font-weight-normal">Registro</h1>
    </div>
    <% include ./partials/messages %>
<form style="max-width: 350px;
margin: auto; " action="/users/register" method="POST">
  <div class="form-group">    
    <label for="name">Nombre</label>
    <input type="name" id="name" name="name" class="form-control" placeholder="Ingrese su nombre"
      value="<%= typeof name != 'undefined' ? name : '' %>" />
  </div>
  <div class="form-group">
    <label>Nombre de usuario</label>
    <input type="text" class="form-control" placeholder="Ingrese nombre de usuario" name="username"
      value="<%= typeof name != 'undefined' ? name : '' %>">
  </div>
  <div class="form-group">
    <label for="email">Correo</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="Ingrese su correo"
      value="<%= typeof email != 'undefined' ? email : '' %>" />
  </div>
  <div class="form-group">
    <label for="password">Contraseña</label>
    <input type="password" id="password" name="password" class="form-control" placeholder="Cree la contraseña"
      value="<%= typeof password != 'undefined' ? password : '' %>" />
  </div>
  <div class="form-group">
    <label for="password2">Confirmar contraseña</label>
    <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirme la contraseña"
      value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
  </div>
  <button type="submit" class="btn btn-lg btn-outline-success btn-block">
    Registrarme
  </button>
</form>
<p style="text-align: center;" class="lead mt-4">
  ¿Tienes una cuenta? <a href="/users/login">Logueate</a>
</p>
</div>