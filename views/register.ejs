<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Registro
      </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Nombre</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label>Nombre de usuario</label>
          <input type="text" class="form-control" placeholder="Ingrese nombre de usuario" name="username" value="<%= typeof name != 'undefined' ? name : '' %>">
        </div>
        <div class="form-group">
          <label for="email">Correo</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Ingrese correo"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Contraseña</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Cree la contraseña"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirmar contraseña</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirme la contraseña"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Registrarme
        </button>
      </form>
      <p class="lead mt-4">¿Tienes una cuenta?<a href="/users/login">Logueate</a></p>
    </div>
  </div>
</div>
