  <h6 class="text-center d-inline-block text-truncate font-weight-bolder"
    style="max-width:80%;margin: auto;height: 2.5rem;line-height: 2.5;">Grupos</h6>
    <a href="/groups" class="text-white"><i class="material-icons"
      style="position: fixed; top: 0.5rem; left: 0.8rem;">navigate_before</i></a>
  <div style="width: 100%;height: 3rem; align-items: center;" class="d-flex justify-content-center p-3 bg-b">
    <span class="">Crear grupo</span>
  </div>
</nav>

<!-- Main -->
<div class="container-fluid pr-0" style="padding-top: 5rem;margin-bottom: 5rem; margin-top:2rem;">
  <% include ./partials/messages %>
  <form action="/createGroup" method="POST">
    <div class="form-group">
      <label for="name">Nombre del grupo</label>
      <input type="name" id="name" name="name" class="form-control" placeholder="Nombre del nuevo grupo"
        value="<%= typeof name != 'undefined' ? name : '' %>" />
    </div>
    <div class="form-group">
      <label>Fecha del partido</label>
      <input type="text" class="form-control" placeholder="Ingrese fecha" name="date"
        value="<%= typeof name != 'undefined' ? name : '' %>">
    </div>
    <div class="form-group">
      <label>Lugar del partido</label>
      <input type="text" class="form-control" placeholder="Ingrese lugar" name="place"
        value="<%= typeof name != 'undefined' ? name : '' %>">
    </div>
    <div class="form-group">
      <label>Nota</label>
      <input type="text" class="form-control" placeholder="Ingrese datos extras" name="note"
        value="<%= typeof name != 'undefined' ? name : '' %>">
    </div>
    <button type="submit" class="btn btn-primary btn-block">
      Crear grupo
    </button>
  </form>
</div>

