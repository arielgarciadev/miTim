<!-- Main -->
<div class="container-fluid pr-0" style="padding-top: 5rem;margin-bottom: 5rem;">
    <form action="/scoreGroup/<%=grupo.id%>" method="POST"> 
        <%for (let i = 0; i < usuarios.length; i++) {%>
            <%  if (grupo.users[i].response == "yes") {%>
        <div class="bd-example p-0">
            <div class="media">
                <img src="../public/upload/<%=usuarios[i].image%>" class="img-profiles" alt="...">
                <div class="media-body d-flex justify-content-between"
                    style="border-bottom: 1px solid gray;padding: 1rem 1rem;">
                    <div>
                        <h6 class="mt-0 font-weight-bolder"><%=usuarios[i].name%></h6>     
                            <input type="hidden" name="usersID" value="<%=grupo.users[i].userID%>">                                     
                            <i class="material-icons text-warning">star</i><select style="border: none;vertical-align: super;" required name="scores">
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3" selected>3</option>
                              <option value="4">4</option>
                              <option value="5">5</option>
                            </select>                             
                    </div>
                    <div class="respuesta <%=grupo.users[i].response%>" style="margin: auto 0">
                            <%  if (grupo.users[i].response == "yes") {%>
                                <i class="material-icons m-2" style="font-size: 2rem;color:green">thumb_up</i>
                            <% }  %>
                     </div>
                    </div>
                </div>
            </div>
            <% }  %>
        <%}%>    
            <button id="botonCalificar" type="submit" class="btn btn-success">Calificar</button>
        </form> 
    </div>

